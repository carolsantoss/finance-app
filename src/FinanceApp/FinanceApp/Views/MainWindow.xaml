<Window x:Class="FinanceApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        Title="FinanceApp"
        Height="704"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#1B1B1B">

    <Window.Resources>
        <!-- Estilo para botões do menu lateral -->
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,6">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3C3C3C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botão ativo -->
        <Style x:Key="MenuButtonActive" TargetType="Button" BasedOn="{StaticResource MenuButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Estilo para cards do dashboard -->
        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" 
                                      BlurRadius="10" 
                                      ShadowDepth="0" 
                                      Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Menu lateral -->
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- MENU LATERAL -->
        <Border Grid.Column="0" 
                Background="#2A2A2E"
                BorderBrush="#3C3C3C"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- LOGO E TÍTULO -->
                <Border Grid.Row="0"
                        Background="#1F1F23"
                        CornerRadius="0,0,12,12"
                        Padding="20,24"
                        Margin="12,0,12,20">
                    <StackPanel>
                        <TextBlock Text="💰"
                                   FontSize="32"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Finance App"
                                   Foreground="White"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Controle Financeiro"
                                   Foreground="#888888"
                                   FontSize="11"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- MENU DE NAVEGAÇÃO -->
                <StackPanel Grid.Row="1" 
                            Margin="12,0,12,0">

                    <TextBlock Text="NAVEGAÇÃO"
                               Foreground="#666666"
                               FontSize="11"
                               FontWeight="Bold"
                               Margin="16,0,0,8"/>

                    <Button Content="📊  Dashboard"
                            Style="{StaticResource MenuButtonActive}"/>

                    <Button Content="💸  Lançar Gastos"
                            Style="{StaticResource MenuButton}"
                            Click="BtnNovoLancamento_Click"/>

                    <Button Content="📋  Extratos"
                            Style="{StaticResource MenuButton}"/>

                    <Button Content="📈  Relatórios"
                            Style="{StaticResource MenuButton}"/>

                    <Separator Background="#3C3C3C" 
                               Margin="0,12,0,12"/>

                    <TextBlock Text="CONFIGURAÇÕES"
                               Foreground="#666666"
                               FontSize="11"
                               FontWeight="Bold"
                               Margin="16,0,0,8"/>

                    <Button Content="⚙️  Preferências"
                            Style="{StaticResource MenuButton}"/>

                    <Button Content="👤  Perfil"
                            Style="{StaticResource MenuButton}"/>
                </StackPanel>

                <!-- RODAPÉ DO MENU -->
                <Border Grid.Row="2"
                        Background="#1F1F23"
                        CornerRadius="12,12,0,0"
                        Padding="16"
                        Margin="12,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Usuário logado:"
                                   Foreground="#888888"
                                   FontSize="11"/>
                        <TextBlock Text="{Binding NomeUsuario, FallbackValue='Admin'}"
                                   Foreground="White"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- CONTEÚDO PRINCIPAL -->
        <ScrollViewer Grid.Column="1" 
                      VerticalScrollBarVisibility="Auto"
                      Background="#1B1B1B">
            <StackPanel Margin="32,24">

                <!-- CABEÇALHO -->
                <Grid Margin="0,0,0,28">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Dashboard"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Visão geral das suas finanças"
                                   FontSize="14"
                                   Foreground="#888888"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <Border Grid.Column="1"
                            Background="#252526"
                            CornerRadius="8"
                            Padding="16,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📅"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dd/MM/yyyy'}"
                                       Foreground="White"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- CARDS DE RESUMO -->
                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- CARD SALDO -->
                    <Border Grid.Column="0"
                            Style="{StaticResource DashboardCard}"
                            Margin="0,0,16,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,12">
                                <TextBlock Text="💰"
                                           FontSize="24"
                                           Margin="0,0,12,0"/>
                                <TextBlock Text="Saldo Atual"
                                           Foreground="#CCCCCC"
                                           FontSize="14"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Text="{Binding Saldo, StringFormat=R$ {0:N2}, FallbackValue='R$ 0,00'}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"/>

                            <TextBlock Text="Atualizado agora"
                                       Foreground="#666666"
                                       FontSize="11"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- CARD RECEITAS -->
                    <Border Grid.Column="1"
                            Style="{StaticResource DashboardCard}"
                            Margin="0,0,16,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,12">
                                <TextBlock Text="📈"
                                           FontSize="24"
                                           Margin="0,0,12,0"/>
                                <TextBlock Text="Receitas"
                                           Foreground="#CCCCCC"
                                           FontSize="14"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Text="{Binding Entradas, StringFormat=R$ {0:N2}, FallbackValue='R$ 0,00'}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#00BCD4"/>

                            <TextBlock Text="Este mês"
                                       Foreground="#666666"
                                       FontSize="11"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- CARD DESPESAS -->
                    <Border Grid.Column="2"
                            Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,12">
                                <TextBlock Text="📉"
                                           FontSize="24"
                                           Margin="0,0,12,0"/>
                                <TextBlock Text="Despesas"
                                           Foreground="#CCCCCC"
                                           FontSize="14"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Text="{Binding Saidas, StringFormat=R$ {0:N2}, FallbackValue='R$ 0,00'}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#E53935"/>

                            <TextBlock Text="Este mês"
                                       Foreground="#666666"
                                       FontSize="11"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- GRÁFICO -->
                <Border Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,20">
                            <TextBlock Text="📊"
                                       FontSize="24"
                                       Margin="0,0,12,0"/>
                            <TextBlock Text="Evolução Mensal"
                                       Foreground="White"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Border Background="#1F1F23"
                                CornerRadius="12"
                                Height="280"
                                BorderBrush="#3C3C3C"
                                BorderThickness="1">
                            <Grid>
                                <TextBlock Text="📈 Gráfico em desenvolvimento"
                                           Foreground="#666666"
                                           FontSize="16"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>