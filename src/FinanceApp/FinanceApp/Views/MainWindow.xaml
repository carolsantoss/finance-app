<Window x:Class="FinanceApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FinanceApp" Height="650" Width="1100"
        Background="#1B1B1B">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Menu lateral -->
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- MENU LATERAL -->
        <Border Grid.Column="0" Background="#2A2A2E">
            <StackPanel Margin="20">
                <TextBlock Text="Finance App" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,30"/>
                <Button Content="Dashboard" Background="#3C3C3C" Foreground="White" BorderBrush="#555555" Height="40" Margin="0,0,0,10"/>
                <Button Content="Lançar Gastos" Background="#3C3C3C" Foreground="White" BorderBrush="#555555" Height="40" Margin="0,0,0,10"/>
                <Button Content="Extratos" Background="#3C3C3C" Foreground="White" BorderBrush="#555555" Height="40" Margin="0,0,0,10"/>
                <Button Content="Relatórios" Background="#3C3C3C" Foreground="White" BorderBrush="#555555" Height="40" Margin="0,0,0,10"/>
                <Button Content="Configurações" Background="#3C3C3C" Foreground="White" BorderBrush="#555555" Height="40"/>
            </StackPanel>
        </Border>

        <!-- CONTEÚDO PRINCIPAL -->
        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="Dashboard" FontSize="30" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

            <!-- RESUMOS EM CARDS -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,20">
                <Border Background="#252526" CornerRadius="8" Width="200" Margin="0,0,15,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Saldo Atual" Foreground="White"/>
                        <TextBlock Text="R$ 4.250,00" FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                    </StackPanel>
                </Border>

                <Border Background="#252526" CornerRadius="8" Width="200" Margin="0,0,15,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Receitas" Foreground="White"/>
                        <TextBlock Text="R$ 8.140,00" FontSize="24" FontWeight="Bold" Foreground="#00BCD4"/>
                    </StackPanel>
                </Border>

                <Border Background="#252526" CornerRadius="8" Width="200" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Despesas" Foreground="White"/>
                        <TextBlock Text="R$ 3.890,00" FontSize="24" FontWeight="Bold" Foreground="#E53935"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- GRÁFICO SIMULADO -->
            <Border Background="#252526" Height="300" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="Evolução Mensal" Foreground="White" FontSize="20" Margin="0,0,0,10"/>

                    <!-- Área do gráfico simulada -->
                    <Border Background="#3A3A3C" CornerRadius="8" Height="200">
                        <TextBlock Text="(Gráfico aqui)" Foreground="#777777" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
