<Window x:Class="FinanceApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Entrar"
        Height="808"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1B1B1B">

    <Window.Resources>
        <!-- Estilo para TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="SelectionBrush" Value="#4CAF50"/>
            <Setter Property="SelectionTextBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para PasswordBox -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="SelectionBrush" Value="#4CAF50"/>
            <Setter Property="SelectionTextBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para Button Principal -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3D8B40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para Button Secundário -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2A2E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botão de toggle (olho) -->
        <Style x:Key="TogglePasswordButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#999999"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#252526"
            CornerRadius="16"
            Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                              BlurRadius="20" 
                              ShadowDepth="0" 
                              Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- CABEÇALHO COM LOGO -->
            <Border Grid.Row="0"
                    Background="#1F1F23"
                    CornerRadius="16,16,0,0"
                    Padding="32,40,32,32">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="💰"
                               FontSize="48"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>

                    <TextBlock Text="Finance App"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Seu controle financeiro inteligente"
                               FontSize="13"
                               Foreground="#888888"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- FORMULÁRIO DE LOGIN -->
            <StackPanel Grid.Row="1"
                        Margin="32,32,32,10">

                <TextBlock Text="Bem-vindo de volta! 👋"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,6"/>

                <TextBlock Text="Entre com suas credenciais para continuar"
                           FontSize="13"
                           Foreground="#999999"
                           Margin="0,0,0,28"/>

                <!-- EMAIL -->
                <TextBlock Text="E-mail"
                           Foreground="#CCCCCC"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>

                <Border Background="#252526"
                        BorderBrush="#3C3C3C"
                        BorderThickness="1"
                        CornerRadius="8"
                        Height="44"
                        Margin="0,0,0,20">
                    <TextBox x:Name="EmailTextBox"
                             Background="Transparent"
                             Foreground="White"
                             CaretBrush="White"
                             SelectionBrush="#4CAF50"
                             SelectionTextBrush="White"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"
                             Padding="14,0"
                             FontSize="14"/>
                </Border>

                <!-- SENHA -->
                <TextBlock Text="Senha"
                           Foreground="#CCCCCC"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>

                <Border Background="#252526"
                        BorderBrush="#3C3C3C"
                        BorderThickness="1"
                        CornerRadius="8"
                        Height="44"
                        Margin="0,0,0,28">
                    <Grid>
                        <!-- PasswordBox (oculto por padrão) -->
                        <PasswordBox x:Name="PasswordBox"
                                     Background="Transparent"
                                     Foreground="White"
                                     CaretBrush="White"
                                     SelectionBrush="#4CAF50"
                                     SelectionTextBrush="White"
                                     BorderThickness="0"
                                     VerticalContentAlignment="Center"
                                     Padding="14,0,50,0"
                                     FontSize="14"/>

                        <!-- TextBox (visível quando mostrar senha) -->
                        <TextBox x:Name="PasswordTextBox"
                                 Background="Transparent"
                                 Foreground="White"
                                 CaretBrush="White"
                                 SelectionBrush="#4CAF50"
                                 SelectionTextBrush="White"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 Padding="14,0,50,0"
                                 FontSize="14"
                                 Visibility="Collapsed"/>

                        <!-- Botão de toggle (olho) -->
                        <Button x:Name="TogglePasswordButton"
                                Style="{StaticResource TogglePasswordButton}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"
                                Click="TogglePasswordVisibility_Click">
                            <TextBlock x:Name="EyeIcon"
                                       Text="👁️"
                                       FontSize="18"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- BOTÃO ENTRAR -->
                <Button Content="Entrar na conta"
                        Height="48"
                        Style="{StaticResource PrimaryButton}"
                        Click="Login_Click"/>

                <!-- DIVISOR -->
                <Grid Margin="0,28,0,28">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Separator Grid.Column="0"
                               Background="#3C3C3C"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1"
                               Text="OU"
                               Foreground="#666666"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="16,0"/>

                    <Separator Grid.Column="2"
                               Background="#3C3C3C"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- CRIAR CONTA -->
                <Border Background="#2A2A2E"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock Text="Ainda não tem conta?"
                                   Foreground="#CCCCCC"
                                   FontSize="13"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>

                        <Button Content="Criar conta"
                                Style="{StaticResource SecondaryButton}"
                                Padding="8,4"
                                Click="BtnCriarConta_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>
    </Border>
</Window>