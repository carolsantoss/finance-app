<Window x:Class="FinanceApp.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Criar conta"
        Height="520"
        Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignBackground}">

    <Grid>
        <materialDesign:Card
            Width="360"
            Padding="32"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <StackPanel>

                <!-- Título -->
                <TextBlock
                    Text="Criar conta"
                    FontSize="26"
                    FontWeight="Bold"
                    Margin="0,0,0,8"/>

                <TextBlock
                    Text="Preencha os dados abaixo"
                    Foreground="{DynamicResource MaterialDesignBodyLight}"
                    Margin="0,0,0,24"/>

                <!-- Nome -->
                <TextBlock Text="Nome" Margin="0,0,0,4"/>
                <TextBox
                    x:Name="txtNome"
                    materialDesign:HintAssist.Hint="Seu nome completo"
                    Margin="0,0,0,16"/>

                <!-- Email -->
                <TextBlock Text="E-mail" Margin="0,0,0,4"/>
                <TextBox
                    x:Name="txtEmail"
                    materialDesign:HintAssist.Hint="exemplo@email.com"
                    Margin="0,0,0,16"/>

                <!-- Senha -->
                <TextBlock Text="Senha" Margin="0,0,0,4"/>
                <PasswordBox
                    x:Name="txtSenha"
                    Margin="0,0,0,16"/>

                <!-- Confirmar -->
                <TextBlock Text="Confirmar senha" Margin="0,0,0,4"/>
                <PasswordBox
                    x:Name="txtConfirmarSenha"
                    Margin="0,0,0,24"/>

                <!-- Botões -->
                <Button
                    Content="Criar conta"
                    Height="44"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="BtnRegister_Click"/>

                <Button
                    Content="Já tenho conta"
                    Margin="0,12,0,0"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="BtnVoltarLogin_Click"/>

            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
