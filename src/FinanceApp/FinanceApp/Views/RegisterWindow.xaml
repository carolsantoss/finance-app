<Window x:Class="FinanceApp.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Criar conta"
        Height="650"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1B1B1B">

    <Window.Resources>
        <!-- Estilo para Button Principal -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3D8B40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para Button Secundário -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2A2E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botão de toggle (olho) -->
        <Style x:Key="TogglePasswordButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#999999"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#252526"
            CornerRadius="16"
            Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                              BlurRadius="20" 
                              ShadowDepth="0" 
                              Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Lado esquerdo - Informações -->
                <ColumnDefinition Width="2*"/>
                <!-- Lado direito - Formulário -->
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- LADO ESQUERDO - APRESENTAÇÃO -->
            <Border Grid.Column="0"
                    Background="#1F1F23"
                    CornerRadius="16,0,0,16"
                    Padding="40">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="✨"
                               FontSize="64"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,24"/>

                    <TextBlock Text="Bem-vindo ao"
                               FontSize="18"
                               Foreground="#999999"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Finance App"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>

                    <TextBlock Text="Seu controle financeiro inteligente"
                               FontSize="14"
                               Foreground="#888888"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- LADO DIREITO - FORMULÁRIO -->
            <ScrollViewer Grid.Column="1"
                          VerticalScrollBarVisibility="Auto"
                          Padding="40,32">
                <StackPanel>

                    <TextBlock Text="Criar Conta 📝"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Preencha os dados abaixo para começar"
                               FontSize="13"
                               Foreground="#999999"
                               Margin="0,0,0,28"/>

                    <!-- NOME E EMAIL NA MESMA LINHA -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- NOME -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Nome completo"
                                       Foreground="#CCCCCC"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>

                            <Border Background="#252526"
                                    BorderBrush="#3C3C3C"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Height="44">
                                <TextBox x:Name="txtNome"
                                         Background="Transparent"
                                         Foreground="White"
                                         CaretBrush="White"
                                         SelectionBrush="#4CAF50"
                                         SelectionTextBrush="White"
                                         BorderThickness="0"
                                         VerticalContentAlignment="Center"
                                         Padding="14,0"
                                         FontSize="14"/>
                            </Border>
                        </StackPanel>

                        <!-- EMAIL -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="E-mail"
                                       Foreground="#CCCCCC"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>

                            <Border Background="#252526"
                                    BorderBrush="#3C3C3C"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Height="44">
                                <TextBox x:Name="txtEmail"
                                         Background="Transparent"
                                         Foreground="White"
                                         CaretBrush="White"
                                         SelectionBrush="#4CAF50"
                                         SelectionTextBrush="White"
                                         BorderThickness="0"
                                         VerticalContentAlignment="Center"
                                         Padding="14,0"
                                         FontSize="14"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- SENHA E CONFIRMAR SENHA NA MESMA LINHA -->
                    <Grid Margin="0,0,0,32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- SENHA -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Senha"
                                       Foreground="#CCCCCC"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>

                            <Border Background="#252526"
                                    BorderBrush="#3C3C3C"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Height="44">
                                <Grid>
                                    <PasswordBox x:Name="txtSenha"
                                                 Background="Transparent"
                                                 Foreground="White"
                                                 CaretBrush="White"
                                                 SelectionBrush="#4CAF50"
                                                 SelectionTextBrush="White"
                                                 BorderThickness="0"
                                                 VerticalContentAlignment="Center"
                                                 Padding="14,0,50,0"
                                                 FontSize="14"/>

                                    <TextBox x:Name="txtSenhaVisible"
                                             Background="Transparent"
                                             Foreground="White"
                                             CaretBrush="White"
                                             SelectionBrush="#4CAF50"
                                             SelectionTextBrush="White"
                                             BorderThickness="0"
                                             VerticalContentAlignment="Center"
                                             Padding="14,0,50,0"
                                             FontSize="14"
                                             Visibility="Collapsed"/>

                                    <Button x:Name="TogglePasswordButton"
                                            Style="{StaticResource TogglePasswordButton}"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Margin="0,0,8,0"
                                            Click="TogglePasswordVisibility_Click">
                                        <TextBlock x:Name="EyeIcon"
                                                   Text="👁️"
                                                   FontSize="18"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- CONFIRMAR SENHA -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Confirmar senha"
                                       Foreground="#CCCCCC"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>

                            <Border Background="#252526"
                                    BorderBrush="#3C3C3C"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Height="44">
                                <Grid>
                                    <PasswordBox x:Name="txtConfirmarSenha"
                                                 Background="Transparent"
                                                 Foreground="White"
                                                 CaretBrush="White"
                                                 SelectionBrush="#4CAF50"
                                                 SelectionTextBrush="White"
                                                 BorderThickness="0"
                                                 VerticalContentAlignment="Center"
                                                 Padding="14,0,50,0"
                                                 FontSize="14"/>

                                    <TextBox x:Name="txtConfirmarSenhaVisible"
                                             Background="Transparent"
                                             Foreground="White"
                                             CaretBrush="White"
                                             SelectionBrush="#4CAF50"
                                             SelectionTextBrush="White"
                                             BorderThickness="0"
                                             VerticalContentAlignment="Center"
                                             Padding="14,0,50,0"
                                             FontSize="14"
                                             Visibility="Collapsed"/>

                                    <Button x:Name="ToggleConfirmPasswordButton"
                                            Style="{StaticResource TogglePasswordButton}"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Margin="0,0,8,0"
                                            Click="ToggleConfirmPasswordVisibility_Click">
                                        <TextBlock x:Name="EyeIconConfirm"
                                                   Text="👁️"
                                                   FontSize="18"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- BOTÃO CRIAR CONTA -->
                    <Button Content="Criar minha conta"
                            Height="48"
                            Style="{StaticResource PrimaryButton}"
                            Click="BtnRegister_Click"/>

                    <!-- DIVISOR -->
                    <Grid Margin="0,24,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Separator Grid.Column="0"
                                   Background="#3C3C3C"
                                   VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="1"
                                   Text="OU"
                                   Foreground="#666666"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Margin="16,0"/>

                        <Separator Grid.Column="2"
                                   Background="#3C3C3C"
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <!-- JÁ TEM CONTA -->
                    <Border Background="#2A2A2E"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <TextBlock Text="Já tem uma conta?"
                                       Foreground="#CCCCCC"
                                       FontSize="13"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>

                            <Button Content="Fazer login"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="8,4"
                                    Click="BtnVoltarLogin_Click"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>