<Window x:Class="FinanceApp.Views.PerfilWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Perfil do Usuário"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1B1B1B"
        ResizeMode="CanResize"
        MinHeight="600"
        MinWidth="700">

    <Window.Resources>
        <!-- Estilo para cards -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" 
                                      BlurRadius="10" 
                                      ShadowDepth="0" 
                                      Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para labels -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Estilo para TextBox -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1F1F23"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para PasswordBox -->
        <Style x:Key="PasswordStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#1F1F23"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botões -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#3C3C3C"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Padding="0,0,8,0">
            <StackPanel Margin="24,16,24,24">

                <!-- CABEÇALHO -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="👤 Meu Perfil"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Gerencie suas informações pessoais"
                                   FontSize="13"
                                   Foreground="#888888"
                                   Margin="0,3,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="✕ Fechar"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="BtnFechar_Click"
                            VerticalAlignment="Center"/>
                </Grid>

                <!-- CARD AVATAR E INFO RÁPIDA -->
                <Border Style="{StaticResource CardStyle}"
                        Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- AVATAR -->
                        <Border Grid.Column="0"
                                Width="80"
                                Height="80"
                                Background="#4CAF50"
                                CornerRadius="40"
                                Margin="0,0,20,0">
                            <TextBlock Text="{Binding InicialNome}"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- INFO -->
                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding NomeUsuario}"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="{Binding Email}"
                                       FontSize="13"
                                       Foreground="#888888"/>
                            <TextBlock Text="{Binding DataCadastro}"
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- GRID PARA CARDS LADO A LADO -->
                <Grid Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- CARD INFORMAÇÕES PESSOAIS -->
                    <Border Grid.Column="0"
                            Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="📝 Informações Pessoais"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="0,0,0,16"/>

                            <!-- NOME -->
                            <TextBlock Text="Nome completo"
                                       Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="TxtNome"
                                     Text="{Binding NomeUsuario, Mode=TwoWay}"
                                     Style="{StaticResource InputStyle}"
                                     Margin="0,0,0,12"/>

                            <!-- EMAIL -->
                            <TextBlock Text="E-mail"
                                       Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="TxtEmail"
                                     Text="{Binding Email, Mode=TwoWay}"
                                     Style="{StaticResource InputStyle}"
                                     Margin="0,0,0,16"/>

                            <!-- BOTÃO SALVAR ALTERAÇÕES -->
                            <Button Content="💾 Salvar Alterações"
                                    Style="{StaticResource ButtonStyle}"
                                    Click="BtnSalvar_Click"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- CARD SEGURANÇA -->
                    <Border Grid.Column="2"
                            Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="🔒 Segurança"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="0,0,0,16"/>

                            <!-- SENHA ATUAL -->
                            <TextBlock Text="Senha atual"
                                       Style="{StaticResource LabelStyle}"/>
                            <PasswordBox x:Name="PwdSenhaAtual"
                                         Style="{StaticResource PasswordStyle}"
                                         Margin="0,0,0,12"/>

                            <!-- NOVA SENHA -->
                            <TextBlock Text="Nova senha"
                                       Style="{StaticResource LabelStyle}"/>
                            <PasswordBox x:Name="PwdNovaSenha"
                                         Style="{StaticResource PasswordStyle}"
                                         Margin="0,0,0,12"/>

                            <!-- CONFIRMAR SENHA -->
                            <TextBlock Text="Confirmar nova senha"
                                       Style="{StaticResource LabelStyle}"/>
                            <PasswordBox x:Name="PwdConfirmarSenha"
                                         Style="{StaticResource PasswordStyle}"
                                         Margin="0,0,0,16"/>

                            <!-- BOTÃO ALTERAR SENHA -->
                            <Button Content="🔑 Alterar Senha"
                                    Style="{StaticResource ButtonStyle}"
                                    Click="BtnAlterarSenha_Click"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>