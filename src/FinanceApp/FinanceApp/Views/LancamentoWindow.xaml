<Window x:Class="FinanceApp.Views.LancamentoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novo Lançamento"
        Height="520"
        Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1B1B1B">

    <Grid Margin="24">
        <StackPanel>

            <!-- TÍTULO -->
            <TextBlock Text="Novo Lançamento"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,24"/>

            <!-- TIPO -->
            <TextBlock Text="Tipo"
                       Foreground="#CCCCCC"/>
            <ComboBox x:Name="cbTipo"
                      Height="32"
                      Margin="0,6,0,16"
                      Background="#3A3A3A"
                      Foreground="White">
                <ComboBoxItem Content="Entrada"/>
                <ComboBoxItem Content="Saída"/>
            </ComboBox>

            <!-- DESCRIÇÃO -->
            <TextBlock Text="Descrição"
                       Foreground="#CCCCCC"/>
            <TextBox x:Name="txtDescricao"
                     Height="32"
                     Margin="0,6,0,16"
                     Background="#3A3A3A"
                     Foreground="White"/>

            <!-- VALOR -->
            <TextBlock Text="Valor"
                       Foreground="#CCCCCC"/>
            <TextBox x:Name="txtValor"
                     Height="32"
                     Margin="0,6,0,16"
                     Background="#3A3A3A"
                     Foreground="White"/>

            <!-- FORMA DE PAGAMENTO -->
            <TextBlock Text="Forma de pagamento"
                       Foreground="#CCCCCC"/>
            <ComboBox x:Name="cbPagamento"
                      SelectionChanged="cbPagamento_SelectionChanged"
                      Height="32"
                      Margin="0,6,0,16"
                      Background="#3A3A3A"
                      Foreground="White">
                <ComboBoxItem Content="Débito"/>
                <ComboBoxItem Content="Crédito"/>
            </ComboBox>

            <!-- PARCELAS (SÓ CRÉDITO) -->
            <StackPanel x:Name="PainelParcelas"
                        Visibility="Collapsed">
                <TextBlock Text="Quantidade de parcelas"
                           Foreground="#CCCCCC"/>
                <TextBox x:Name="txtParcelas"
                         Height="32"
                         Margin="0,6,0,16"
                         Background="#3A3A3A"
                         Foreground="White"/>
            </StackPanel>

            <!-- DATA -->
            <TextBlock Text="Data"
                       Foreground="#CCCCCC"/>
            <DatePicker x:Name="dpData"
                        Height="32"
                        Margin="0,6,0,24"
                        Background="#3A3A3A"/>

            <!-- BOTÃO -->
            <Button Content="Salvar"
                    Height="42"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BtnSalvarLancamento_Click"/>
        </StackPanel>
    </Grid>
</Window>