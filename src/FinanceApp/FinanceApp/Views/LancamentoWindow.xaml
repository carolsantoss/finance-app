<Window x:Class="FinanceApp.Views.LancamentoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novo Lançamento"
        Height="745"
        Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1B1B1B">

    <Window.Resources>
        <!-- Estilo para TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para ComboBox -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Estilo para DatePicker -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Estilo para Button -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3D8B40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#252526"
            CornerRadius="12"
            Margin="16">
        <Grid Margin="32">
            <StackPanel>

                <!-- CABEÇALHO -->
                <Border Background="#2A2A2E"
                        CornerRadius="8"
                        Padding="20,16"
                        Margin="0,0,0,28">
                    <StackPanel>
                        <TextBlock Text="💰 Novo Lançamento"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="Registre suas entradas e saídas financeiras"
                                   FontSize="13"
                                   Foreground="#999999"/>
                    </StackPanel>
                </Border>

                <!-- TIPO -->
                <TextBlock Text="Tipo de lançamento"
                           Foreground="#CCCCCC"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <ComboBox x:Name="cbTipo"
                          Height="40"
                          Margin="0,0,0,18"
                          Style="{StaticResource ModernComboBox}">
                    <ComboBoxItem Content="💵 Entrada"/>
                    <ComboBoxItem Content="💸 Saída"/>
                </ComboBox>

                <!-- DESCRIÇÃO -->
                <TextBlock Text="Descrição"
                           Foreground="#CCCCCC"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="txtDescricao"
                         Height="40"
                         Margin="0,0,0,18"
                         Style="{StaticResource ModernTextBox}"/>

                <!-- VALOR -->
                <TextBlock Text="Valor (R$)"
                           Foreground="#CCCCCC"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="txtValor"
                         Height="40"
                         Margin="0,0,0,18"
                         Style="{StaticResource ModernTextBox}"/>

                <!-- FORMA DE PAGAMENTO -->
                <TextBlock Text="Forma de pagamento"
                           Foreground="#CCCCCC"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <ComboBox x:Name="cbPagamento"
                          SelectionChanged="cbPagamento_SelectionChanged"
                          Height="40"
                          Margin="0,0,0,18"
                          Style="{StaticResource ModernComboBox}">
                    <ComboBoxItem Content="💳 Débito"/>
                    <ComboBoxItem Content="💳 Crédito"/>
                </ComboBox>

                <!-- PARCELAS (SÓ CRÉDITO) -->
                <StackPanel x:Name="PainelParcelas"
                            Visibility="Collapsed">
                    <TextBlock Text="Quantidade de parcelas"
                               Foreground="#CCCCCC"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="txtParcelas"
                             Height="40"
                             Margin="0,0,0,18"
                             Style="{StaticResource ModernTextBox}"/>
                </StackPanel>

                <!-- DATA -->
                <TextBlock Text="Data do lançamento"
                           Foreground="#CCCCCC"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <DatePicker x:Name="dpData"
                            Height="40"
                            Margin="0,0,0,28"
                            Style="{StaticResource ModernDatePicker}"/>

                <!-- BOTÃO SALVAR -->
                <Button Content="✓ Salvar Lançamento"
                        Height="48"
                        Style="{StaticResource ModernButton}"
                        Click="BtnSalvarLancamento_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>