<Window x:Class="FinanceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Finance App"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignBackground}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
        Background="#1E1E1E"
        Padding="16">

            <StackPanel>

                <TextBlock
            Text="💸 Finance"
            FontSize="22"
            FontWeight="Bold"
            Margin="0,0,0,24"
            Foreground="White"/>

                <Button Content="Resumo"
                Style="{StaticResource MaterialDesignFlatButton}"
                HorizontalContentAlignment="Left"
                Margin="0,4"/>

                <Button Content="Lançamentos"
                Style="{StaticResource MaterialDesignFlatButton}"
                HorizontalContentAlignment="Left"
                Margin="0,4"/>

                <Button Content="Categorias"
                Style="{StaticResource MaterialDesignFlatButton}"
                HorizontalContentAlignment="Left"
                Margin="0,4"/>

            </StackPanel>
        </Border>

        <!-- Conteúdo principal -->
        <Border Grid.Column="1" Padding="24">
            <StackPanel>

                <TextBlock
            Text="Resumo financeiro"
            FontSize="28"
            FontWeight="Bold"
            Margin="0,0,0,24"
            Foreground="{DynamicResource MaterialDesignBody}" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- Saldo -->
                    <materialDesign:Card Grid.Column="0"
                                  Margin="8"
                                  Padding="16"
                                  Background="#2E7D32">

                        <StackPanel>
                            <TextBlock Text="Saldo"
                               FontSize="16"
                               Foreground="White"/>

                            <TextBlock Text="R$ 4.500,00"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Entradas -->
                    <materialDesign:Card Grid.Column="1"
                                  Margin="8"
                                  Padding="16"
                                  Background="#1565C0">

                        <StackPanel>
                            <TextBlock Text="Entradas"
                               FontSize="16"
                               Foreground="White"/>

                            <TextBlock Text="R$ 6.200,00"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Saídas -->
                    <materialDesign:Card Grid.Column="2"
                                  Margin="8"
                                  Padding="16"
                                  Background="#C62828">

                        <StackPanel>
                            <TextBlock Text="Saídas"
                               FontSize="16"
                               Foreground="White"/>

                            <TextBlock Text="R$ 1.700,00"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"/>
                        </StackPanel>
                    </materialDesign:Card>

                </Grid>
            </StackPanel>
        </Border>

    </Grid>
</Window>
