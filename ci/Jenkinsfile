pipeline {
    agent { label 'CTUSYSRVPRD01' }

    environment {
        REPO_URL = 'https://github.com/carolsantoss/finance-app'
        TARGET_DIR = '/app/finance-app'
        // Define temp dir within workspace to ensure a fresh clone
        TEMP_DIR = "${WORKSPACE}/temp_clone"
        PROXY_HOST = 'http://proxyapp.uspery.com:8080'
    }

    stages {
        stage('Preparation') {
            steps {
                script {
                    // Limpa diretório temporário
                    sh "rm -rf '${TEMP_DIR}'"
                    sh "mkdir -p '${TEMP_DIR}'"
                    
                    // Garante que o diretório de destino existe
                    // Nota: O usuário jenkins precisa de permissão de escrita em /app
                    sh "sudo mkdir -p '${TARGET_DIR}'"
                    sh "sudo chown -R \$(whoami) '${TARGET_DIR}'"
                }
            }
        }

        stage('Checkout to Temp') {
            steps {
                dir(TEMP_DIR) {
                    withCredentials([usernamePassword(credentialsId: 'UsperyGit', passwordVariable: 'GIT_PASSWORD', usernameVariable: 'GIT_USERNAME')]) {
                        echo "Using credentials with username: ${GIT_USERNAME}"
                        checkout([
                            $class: 'GitSCM',
                            branches: [[name: '*/main']],
                            doGenerateSubmoduleConfigurations: false,
                            extensions: [],
                            submoduleCfg: [],
                            userRemoteConfigs: [[credentialsId: 'UsperyGit', url: REPO_URL]]
                        ])
                    }
                }
            }
        }

        stage('Deploy Source to Target') {
            steps {
                script {
                    echo "Syncing files to ${TARGET_DIR}..."
                    // Usa rsync para copiar arquivos, excluindo .git e outros desnecessários
                    // A flag --delete remove arquivos no destino que não existem na origem (opcional, cuidado)
                    sh "rsync -av --exclude '.git' '${TEMP_DIR}/' '${TARGET_DIR}/'"
                }
            }
        }

        stage('Build Backend') {
            steps {
                dir("${TARGET_DIR}/src/FinanceApp.API") {
                    echo "Building .NET Backend..."
                    // Restaura e publica localmente. 
                    // Como estamos "rodando" do código fonte, talvez o usuário queira rodar 'dotnet run' ou 'dotnet publish' e apontar o serviço para o publish.
                    // Assumindo estrutura do guia anterior: publish em /var/www ou rodar do próprio diretório /app?
                    // O pedido diz: "la dentro estruturar o sistema e instalar/builder"
                    // Vamos gerar o publish dentro de uma subpasta 'bin/Release/publish' ou similar, ou publicar para uma pasta 'out' interna
                    
                    // Limpa diretório de publish anterior para evitar erros de cópia
                    sh "rm -rf ./publish"
                    sh "dotnet restore"
                    sh "dotnet publish -c Release -o ./publish"
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir("${TARGET_DIR}/src/FinanceApp.Web") {
                    echo "Building Vue Frontend..."
                    
                    // Configuração de Proxy para NPM e Web
                    sh "npm config set proxy ${PROXY_HOST}"
                    sh "npm config set https-proxy ${PROXY_HOST}"
                    sh "npm config set strict-ssl false"
                    
                    // Variáveis de ambiente para o shell (caso alguma ferramento use)
                    withEnv(["HTTP_PROXY=${PROXY_HOST}", "HTTPS_PROXY=${PROXY_HOST}"]) {
                        sh "npm install"
                        sh "npm run build"
                    }
                }
            }
        }

        stage('Update System Services') {
            steps {
                script {
                    echo "Installing/Updating Service..."
                    // Copia o arquivo de serviço para o sistema
                    sh "sudo cp '${TARGET_DIR}/deploy/finance-api.service' /etc/systemd/system/finance-api.service"
                    
                    // Copia configuração do Nginx (Assumindo que o usuário quer sobrescrever/criar)
                    sh "sudo cp '${TARGET_DIR}/deploy/nginx.conf' /etc/nginx/sites-available/finance-app"
                    sh "sudo ln -sf /etc/nginx/sites-available/finance-app /etc/nginx/sites-enabled/"
                    // Opcional: remover default para evitar conflito na porta 80, se desejado
                    sh "sudo rm -f /etc/nginx/sites-enabled/default"

                    // Recarrega o systemd para reconhecer mudanças
                    sh "sudo systemctl daemon-reload"

                    echo "Restarting Services..."
                    sh "sudo systemctl enable finance-api"
                    sh "sudo systemctl restart finance-api"
                    sh "sudo systemctl reload nginx"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
